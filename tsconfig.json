{
	"compilerOptions": {
			"module": "commonjs",
			"esModuleInterop": true,
			"allowSyntheticDefaultImports": true,
			"resolveJsonModule": true,
			"target": "ESnext",
			"noImplicitAny": true,
			"moduleResolution": "node",
			"sourceMap": true,
			"baseUrl": ".",
			"paths": {
					"*": [
							"node_modules/*",
							"src/types/*"
					]
			}
	},
	"include": [
			"src/**/*"
	]
}
